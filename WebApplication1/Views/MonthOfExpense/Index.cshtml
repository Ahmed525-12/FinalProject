@using WebApplication1.ViewModel
@model IEnumerable< MonthOfExpenseVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h1 p-4 ">MonthOfExpenseController</h1>
<br />

 <a class="btn btn-success m-4" role="button" asp-action="Create">Create MonthOfExpense</a>
 


@if (Model.Count() > 0)
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(D => D.numOfMonth)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.TotalAmountMoney)</th>
                <th scope="col">Expenses of this month</th>
                

               
                


            </tr>
        </thead>
        <tbody>
            @foreach (var MonthOfExpense in Model)
            {
                <tr>
                    <th scope="row">@MonthOfExpense.numOfMonth</th>
                    <th scope="row">@MonthOfExpense.TotalAmountMoney</th>
                    <td><a asp-action="Details" asp-route-id="@MonthOfExpense.Id"><i class="fas fa-eye"></i></a></td>
                </tr>
            }
        </tbody>
    </table>


}
else
{
    <div class="alert alert-warning" role="alert">
        there is no MonthOfExpense
    </div>
}