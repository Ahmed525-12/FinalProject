@using WebApplication1.ViewModel
@model IEnumerable< MonthOfExpenseVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h1 p-4 ">Month Of Expense</h1>
<br />


 




    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(D => D.numOfMonth)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.TotalAmountMoney)</th>
                <th scope="col">Expenses of this month</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var MonthOfExpense in Model)
            {
                <tr>
                    <th scope="row">@MonthOfExpense.numOfMonth</th>
                    <th scope="row">@MonthOfExpense.TotalAmountMoney</th>
                    <td><a asp-action="DetailsExpenss" asp-route-id="@MonthOfExpense.Id"><i class="fas fa-eye"></i></a></td>
                </tr>
            }
        </tbody>
    </table>



