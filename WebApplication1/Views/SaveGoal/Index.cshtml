@using WebApplication1.ViewModel
@model IEnumerable<SaveGoalVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h1 p-4 ">Save Goal</h1>
<br />

<a class="btn btn-success m-4" role="button" asp-action="Create">Create Goal</a>



@if (Model.Count() > 0)
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(D => D.TitleGoal)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.TargetAmount)</th>
              



                <th scope="col">Update</th>
                <th scope="col">Delete</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var SaveGoal in Model)
            {
                <tr>
                    <th scope="row">@SaveGoal.TitleGoal</th>
                    <th scope="row">@SaveGoal.TargetAmount</th>




                    <td><a asp-action="Edit" asp-route-id="@SaveGoal.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@SaveGoal.Id"><i class="fas fa-trash-alt text-danger"></i></a></td>

                </tr>
            }
        </tbody>
    </table>


}
else
{
    <div class="alert alert-warning" role="alert">
        there is no SaveGoals
    </div>
}

<h1>Index</h1>

