@using WebApplication1.ViewModel
@model SaveGoalVM
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="padding-fixed container">
<form asp-action="Delete" enctype="multipart/form-data">
    <input asp-for="User_Id" hidden class="form-control">
   
    <div class="form-group pb-3">
            <label asp-for="TitleGoal" class="text-label"></label>
        <input asp-for="TitleGoal" class="form-control">
        <span class="form-text text-danger" asp-validation-for="TitleGoal"></span>
    </div>
    
    <div class="form-group pb-3">
            <label asp-for="TargetAmount" class="text-label"></label>
        <input asp-for="TargetAmount" class="form-control">
        <span class="form-text text-danger" asp-validation-for="TargetAmount"></span>
    </div>
    <button type="submit" class="btn btn-danger">Submit Delete </button>
        <a type="button" class="btn btn-outline-warning" asp-action="Index">Back To List</a>

</form>
</div>