@using WebApplication1.ViewModel
@model ExpenseVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="padding-fixed container">
<form asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="UserId" hidden class="form-control">
    <input asp-for="MonthOfExpenseId" hidden class="form-control">
    <div class="form-group pb-3">
            <label asp-for="Title" class="text-label"></label>
        <input asp-for="Title" class="form-control">
        <span class="form-text text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group pb-3">
            <label asp-for="ExpenseDate" class="text-label"></label>
        <input asp-for="ExpenseDate" class="form-control">
        <span class="form-text text-danger" asp-validation-for="ExpenseDate"></span>
    </div>
    <div class="form-group form-check pb-3">

        <input type="checkbox" class="form-check-input" asp-for="Priority">
            <label asp-for="Priority" class="text-label"></label>
        <span class="form-text text-danger" asp-validation-for="Priority"></span>

    </div>
   
    <div class="form-group pb-3">
            <label asp-for="AmountMoney" class="text-label"></label>
        <input asp-for="AmountMoney" class="form-control">
        <span class="form-text text-danger" asp-validation-for="AmountMoney"></span>
    </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-success">Submit Edit </button>
    <a type="button" class="btn btn-outline-warning" asp-action="Index">Back To List</a>

</form>

