@using WebApplication1.ViewModel
@model ExpenseVM
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="padding-fixed container">

<form asp-action="Delete" enctype="multipart/form-data">
    <input asp-for="UserId" hidden class="form-control">
    <input asp-for="MonthOfExpenseId" hidden class="form-control">
    <div class="form-group pb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" readonly>
        <span class="form-text text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group form-check pb-3">

        <input type="checkbox" class="form-check-input" readonly asp-for="Priority">
        <label asp-for="Priority"></label>
        <span class="form-text text-danger" asp-validation-for="Priority"></span>

    </div>
  
    <div class="form-group pb-3">
        <label asp-for="AmountMoney"></label>
        <input asp-for="AmountMoney" class="form-control " readonly>
        <span class="form-text text-danger" asp-validation-for="AmountMoney"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Delete </button>
    <a type="button" class="btn btn-outline-info" asp-action="Index">Back To List</a>

</form>





