@using WebApplication1.ViewModel
@model IEnumerable<ExpenseVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- main -->

<div class="arrow arrow--top ">
    <svg xmlns="http://www.w3.org/2000/svg" width="270.11" height="649.9" overflow="visible">
        <style>
            .geo-arrow {
                fill: none;
                stroke: #fff;
                stroke-width: 2;
                stroke-miterlimit: 10
            }
        </style>
        <g class="item-to bounce-1">
            <path class="geo-arrow draw-in" d="M135.06 142.564L267.995 275.5 135.06 408.434 2.125 275.499z" />
        </g>
        <circle class="geo-arrow item-to bounce-2" cx="194.65" cy="69.54" r="7.96" />
        <circle class="geo-arrow draw-in" cx="194.65" cy="39.5" r="7.96" />
        <circle class="geo-arrow item-to bounce-3" cx="194.65" cy="9.46" r="7.96" />
        <g class="geo-arrow item-to bounce-2">
            <path class="st0 draw-in" d="M181.21 619.5l13.27 27 13.27-27zM194.48 644.5v-552" />
        </g>
    </svg>
</div>
<div class="arrow arrow--bottom">
    <svg xmlns="http://www.w3.org/2000/svg" width="31.35" height="649.9" overflow="visible">
        <style>
            .geo-arrow {
                fill: none;
                stroke: #fff;
                stroke-width: 2;
                stroke-miterlimit: 10
            }
        </style>
        <g class="item-to bounce-1">
            <circle class="geo-arrow item-to bounce-3" cx="15.5" cy="580.36" r="7.96" />
            <circle class="geo-arrow draw-in" cx="15.5" cy="610.4" r="7.96" />
            <circle class="geo-arrow item-to bounce-2" cx="15.5" cy="640.44" r="7.96" />
            <g class="item-to bounce-2">
                <path class="geo-arrow draw-in" d="M28.94 30.4l-13.26-27-13.27 27zM15.68 5.4v552" />
            </g>
        </g>
    </svg>
</div>
<div class="main">
    <div class="padding-fixed container">


<a class="btn settings-btn " role="button" asp-action="Create">Create Expense</a>
<br />
<div class="border-section p-4">
    <div class="py-5 text-center ">

        <h4 class=" h4-skills text-center ">FILTERS </h4>

    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 text-center">
            <form asp-action="Index" method="get" class="text-center py-4">
                <!-- Your other form elements -->

                <input type="hidden" name="yourBooleanValue" id="yourBooleanValue" value="false" />

                <button type="submit" class="btn btn-primary">Priority true</button>
            </form>

            <!-- Toggle the hidden input value using JavaScript -->
            <script>
                document.getElementById('yourBooleanValue').value = true;  // Set to true when the button is clicked
            </script>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12">
            <form asp-action="Index" method="get" class="text-center py-4">
                <!-- Your other form elements -->

                <input type="hidden" name="yourBooleanValue" id="BooleanValue" value="false" />

                <button type="submit" class="btn btn-primary">Priority false</button>
            </form>

            <!-- Toggle the hidden input value using JavaScript -->
            <script>
                document.getElementById('BooleanValue').value = false;  // Set to true when the button is clicked
            </script>


        </div>
        <div class="col-lg-4 col-md-4 col-sm-12">

            <form asp-action="Index" class="text-center py-4">
                <button type="submit" class="btn btn-primary">Clear Filters</button>
            </form>
        </div>
    </div>
  
  
    <br />
    <form asp-action="Index">
        <div class="input-group">
            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" name="searchValue" />
            <button type="submit" class="btn btn-outline-primary" value="search">search</button>
        </div>
    </form>


</div>




@if (Model.Count() > 0)
{
    <div class="col-lg-12col-md-12 col-sm-12">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(D => D.Title)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.AmountMoney)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.Priority)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.ExpenseDate)</th>



                <th scope="col">Update</th>
                <th scope="col">Delete</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var Expense in Model)
            {
                <tr>
                    <th scope="row">@Expense.Title</th>
                    <th scope="row">@Expense.AmountMoney</th>
                    <th scope="row">@Expense.Priority</th>
                    <th scope="row">@Expense.ExpenseDate</th>


                   
                    <td><a asp-action="Edit" asp-route-id="@Expense.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@Expense.Id"><i class="fas fa-trash-alt text-danger"></i></a></td>

                </tr>
            }
        </tbody>
    </table>

    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        there is no Expense
    </div>
}
    </div>
</div>
